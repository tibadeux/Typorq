  booktitle = {Advances in {{Mexican Limnology}}: {{Basic}} and {{Applied Aspects}}},
  author = {{Schmitter-Soto}, J. J. and Com{\'i}n, F. A. and {Escobar-Briones}, E. and {Herrera-Silveira}, J. and Alcocer, J. and {Su{\'a}rez-Morales}, E. and {El{\'i}as-Guti{\'e}rrez}, M. and {D{\'i}az-Arce}, V. and Mar{\'i}n, L. E. and Steinich, B.},
