@article{bauer-gottwein2011,
  title = {Review: {{The Yucat\'an Peninsula}} Karst Aquifer, {{Mexico}}},
  shorttitle = {Review},
  author = {{Bauer-Gottwein}, Peter and Gondwe, Bibi R. N. and Charvet, Guillaume and Mar{\'i}n, Luis E. and {Rebolledo-Vieyra}, Mario and {Merediz-Alonso}, Gonzalo},
